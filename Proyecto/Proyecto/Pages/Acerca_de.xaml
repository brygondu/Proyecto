<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.Pages.Acerca_de"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="Acerca de"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">

    <StackLayout Padding="8,25,0,0">
        <Label Text="Está aplicación es el proyecto del curso de desarrollo de aplicaciones moviles multiplataforma en Xamarin"
               TextColor="{StaticResource FontColor}"
               VerticalOptions="Center" HorizontalOptions="Center" />

        <Label Text="Desarrollado por Bryan González Durán"
               TextColor="{StaticResource FontColor}"
               VerticalOptions="Center" HorizontalOptions="Center" />

        <Label Text="Versión 1.0"
               TextColor="{StaticResource FontColor}"
               VerticalOptions="Center" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>